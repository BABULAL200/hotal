<style>

/* Global navbar styles */
.navbar {
    width: 100%;
    background: linear-gradient(135deg, #ff416c, #ff4b2b); /* Gradient background */
    padding: 12px 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Navbar brand/logo */
.navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
    color: white !important;
    display: flex;
    align-items: center;
}

.navbar-brand i {
    margin-right: 8px;
    font-size: 1.6rem;
}

/* Navbar Links */
.navbar-nav .nav-link {
    font-size: 1rem;
    color: white !important;
    font-weight: 500;
    padding: 8px 15px;
    transition: 0.3s ease-in-out;
}

.navbar-nav .nav-link:hover {
    color: #ffdd57 !important;
    transform: scale(1.1);
}

/* Search Bar */
.search-form {
    width: 40%;
    display: flex;
    align-items: center;
    background: white;
    border-radius: 25px;
    overflow: hidden;
    padding: 5px;
}

.search-input {
    width: 100%;
    border: none;
    padding: 8px 12px;
    outline: none;
    font-size: 1rem;
}

.search-button {
    background: #ff4b2b;
    color: white;
    border: none;
    padding: 8px 15px;
    cursor: pointer;
    transition: 0.3s;
}

.search-button:hover {
    background: #ff2b74;
}

/* Right-side menu */
.navbar-nav.ms-auto .nav-item {
    margin-left: 10px;
}

/* Mobile Styles */
@media (max-width: 768px) {
    .navbar {
        padding: 10px;
    }

    .navbar-toggler {
        border: none;
        outline: none;
    }

    .navbar-collapse {
        background: rgba(255, 255, 255, 0.1);
        padding: 10px 0;
        backdrop-filter: blur(10px);
    }

    .navbar-nav .nav-item {
        text-align: center;
        margin: 5px 0;
    }

    .search-form {
        width: 90%;
        margin: 10px auto;
    }
/* Mobile Styles */
@media (max-width: 768px) {
    .navbar-collapse {
        background: black !important; /* ✅ Black background for side menu */
        padding: 10px 0;
        backdrop-filter: blur(5px);
    }

    .navbar-nav .nav-item {
        text-align: center;
        margin: 5px 0;
    }

    .navbar-nav .nav-link {
        color: white !important; /* ✅ White text for contrast */
        font-size: 1.2rem;
    }

    .navbar-nav .nav-link:hover {
        color: #ffdd57 !important; /* ✅ Yellow hover effect */
    }

    .search-form {
        width: 90%;
        margin: 10px auto;

    
}
}

</style>


<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings">
            <i class="fa-solid fa-hotel"></i> Book My Hotal
        </a>
        
        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/listings">Explore</a>
                </li>
            </ul>
            <!-- Search Bar -->
            <form class="search-form d-flex mx-auto" role="search">
                <input class="form-control search-input" type="search" placeholder="Search destination">
                <button class="btn btn-dark search-button" type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>

            <!-- Right Side Menu -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/listings/new">Add Listing</a>
                </li>
                <% if (!currUser) { %>
                    <li class="nav-item"><a class="nav-link" href="/signup"><b>Sign Up</b></a></li>
                    <li class="nav-item"><a class="nav-link" href="/login"><b>Log In</b></a></li>
                <% } else { %>
                    <li class="nav-item"><a class="nav-link" href="/logout"><b>Log Out</b></a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

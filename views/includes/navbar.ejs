<style>
/* Navbar Main Styling */
.navbar {
    padding: 10px 20px;
}

.navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
}

/* Navbar Items */
.navbar-nav {
    width: 100%;
    text-align: center;
}

/* Search Bar */
.search-form {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 30px;
    overflow: hidden;
    border: 1px solid #ccc;
    background: #fff;
    margin: 10px auto; /* Center it properly */
    width: 300px;
}

.search-input {
    border: none;
    padding: 8px;
    outline: none;
    width: 100%;
}

.search-button {
    border: none;
    background: #007bff;
    color: white;
    padding: 8px 12px;
    border-radius: 0;
    cursor: pointer;
}

.search-button:hover {
    background: #0056b3;
}

/* Responsive Fix */
@media (max-width: 768px) {
    .search-form {
        width: 90%;  /* Mobile में full width */
        display: block;
    }

    .search-input {
        width: 85%;
        display: inline-block;
    }

    .search-button {
        display: inline-block;
    }

    .navbar-nav {
        display: flex;
        flex-direction: column;
        align-items: center;  /* Center items */
        padding: 10px 0;
    }

    .navbar-nav .nav-item {
        width: 100%;
        text-align: center;
    }
}

.navbar-brand {
    color: red !important; /* Red Color */
    font-weight: bold;
    font-family: "Poppins", sans-serif; /* Stylish Font */
    font-size: 22px;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 15px;
}

.navbar-brand i {
    color: red !important; /* Icon Color Red */
    font-size: 24px;
}
</style>


<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings">
            <i class="fa-solid fa-hotel"></i> Book My Hotal
        </a>
        
        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/listings">Explore</a>
                </li>
            </ul>

            <!-- Search Bar -->
            <form class="search-form d-flex mx-auto" role="search">
                <input class="form-control search-input" type="search" placeholder="Search destination">
                <button class="btn btn-dark search-button" type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>

            <!-- Right Side Menu -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/listings/new">Add Listing</a>
                </li>
                <% if (!currUser) { %>
                    <li class="nav-item"><a class="nav-link" href="/signup"><b>Sign Up</b></a></li>
                    <li class="nav-item"><a class="nav-link" href="/login"><b>Log In</b></a></li>
                <% } else { %>
                    <li class="nav-item"><a class="nav-link" href="/logout"><b>Log Out</b></a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
